<h1>Order</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<h2>Product</h2>
<ul class="record_actions">
    {% for p in entity.po %}
    <li>
        {{ p.product }}
    </li>
    {% endfor %}
</ul>    


<ul class="record_actions">
    <li>
        <a href="{{ path('test_order') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('test_order_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('test_order_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
